<div class='container'>
    <div class='row'>
        <div class='col'>
            <h1>Recent Posts</h1>
        </div>
        <div class='col'>
            <div id='new-post'>
                <h3><%= link_to "Create Post", new_post_path, :class => 'btn btn-primary btn-lg active btn-block', remote: true %></h3>
            </div>
        </div>
    </div>
 </div>

<div class='container'>
    <div class='row'>
        <div class='col-sm-12'>
            
            <% @posts.each do |post| %>
                <div class='card'>
                    <div class='card-header'>
                        <h4><%= post.title %></h4>
                    </div>
                    <div class='card-body'>
                        <div class='card-title'>
                            <h5><%= post.name %></h5>
                        </div>
                            <div class='card-text'>
                                <p><%= post.content %></p>
                            </div>
                    </div>
                </div>
            <% end %>

            <%= will_paginate(@posts) %>
        </div>
    </div>
</div>

