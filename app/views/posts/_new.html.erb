

    <%= form_for :post, url: posts_path do |f| %>
        <p>
        <%= f.label :title %> <br>
        <%= f.text_field(:title, { :class => 'form-control' }) %>
        </p>
        <p>
        <%= f.label :name %>
        <%= f.text_field(:name, { :class => 'form-control'})%>
        </p>
        <p>
        <%= f.label :content %> <br>
        <%= f.text_area(:content, { :class => 'form-control' }) %> <br>
        </p>
        <p>
        <%= f.submit({:class => 'btn btn-primary'}) %>
        </p>
    <% end %>

